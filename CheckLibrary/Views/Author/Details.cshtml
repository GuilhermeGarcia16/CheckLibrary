@model CheckLibrary.Models.Author
@{
    ViewBag.Title = "Author";
}
<head>
    <link rel="stylesheet" href="~/css/forms.css" />
</head>
<h1>@ViewBag.Title</h1>

<form class="form">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Name" class="form-label">Name</label>
            <input asp-for="Name" type="text" size="40" disabled/>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for=BirthDay class="form-label">Birthday</label></br>
            <input asp-for="BirthDay" type="date" disabled/>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Nationality" class="form-label">Nationality</label>
            <select asp-for="Nationality" id="nationality" disabled></select>
        </div>
    </div>
    <div class="col-auto my-1">
        <a asp-action="Index" class="btn btn-info">Back to List</a>
    </div>
</form>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}